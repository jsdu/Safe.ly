<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/cloud"
	android:fillViewport="false"
	android:id="@+id/Scroll"
    android:clickable="false"
    android:nestedScrollingEnabled="true">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="50dp">

		<Button
			android:layout_width="384dp"
			android:layout_height="wrap_content"
			android:text="Initialize"
			android:id="@+id/Init"
			android:clickable="true"
			android:enabled="true"
			android:hint="Click to Initialize"
			android:typeface="monospace"
			android:layout_marginBottom="10dp" />

		<Button
			android:layout_width="384dp"
			android:layout_height="wrap_content"
			android:text="Connect"
			android:id="@+id/connect"
			android:enabled="true"
			android:clickable="true"
			android:elegantTextHeight="false"
			android:typeface="monospace"
			android:layout_marginBottom="10dp" />

		<Button
			android:layout_width="384dp"
			android:layout_height="wrap_content"
			android:text="Refresh"
			android:id="@+id/refresh"
			android:enabled="true"
			android:clickable="true"
			android:typeface="monospace"
			android:layout_marginBottom="10dp" />

		<Spinner
            android:id="@+id/muses_spinner"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:spinnerMode="dropdown" />

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp">

		<TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="@string/status"
            android:typeface="monospace"
            android:id="@+id/status" />

		<TextView
            android:id="@+id/con_status"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="@string/undefined" />

		<TextView
               android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="@string/accel"
            android:id="@+id/accel" />

		<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:id="@+id/acc_x"
                    android:layout_width="63dp"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:text="@string/init_val" />

                <TextView
                    android:id="@+id/acc_y"
                    android:layout_width="67dp"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:text="@string/init_val" />
                <TextView
                    android:id="@+id/acc_z"
                    android:layout_width="72dp"
                    android:layout_height="30dp"
                    android:textSize="18dp"
                    android:text="@string/init_val" />

                <EditText
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/acc_x_init"
                    android:text="0.0" />

                <EditText
                    android:layout_width="59dp"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/acc_y_init"
                    android:text="0.0" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:id="@+id/acc_z_init"
                    android:layout_weight="1"
                    android:text="0.0" />

            </LinearLayout>

    </LinearLayout>

    <TextView
android:layout_width="380dp"
android:layout_height="30dp"
android:textSize="18sp"
android:text="avgSoFar + avgInit"
android:id="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/avgBETASoFar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/avgBETAInit1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/avgBETASoFar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/avgBETAInit2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/init_val" />
    </LinearLayout>

    <TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
android:text="BETA_Absolute:"
android:id="@+id/textView2"
android:paddingTop="10dp"
android:paddingBottom="10dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bAbsolute2"
            android:layout_width="165dp"
            android:layout_height="28dp"
            android:textSize="16sp"
            android:text="@string/init_val" />

        <TextView
            android:id="@+id/bAbsolute3"
            android:layout_width="165dp"
            android:layout_height="28dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="@string/init_val" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Status:"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp" />

    <TextView
android:id="@+id/flag"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_weight="1"
android:textSize="25sp"
        android:textColor="#ffff0000"
android:layout_marginTop="0dp"
        android:typeface="monospace" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="@string/version"
        android:id="@+id/v" />

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="@string/undefined" />

</LinearLayout>
</ScrollView>